---
export interface Props {
  name: string;
  role: string;
  statement: string;
  imgSource: string;
}


const {name, role, statement, imgSource} = Astro.props;
---

<style lang="scss">
  article {
    --gap: 2rem;

    max-width: 40ch;

    padding: 1.5rem;
    flex-direction: column;
    align-items: center;

    text-align: center;
  }

  img {
    width: 4.5rem;
    aspect-ratio: 1;

    border-radius: 50%;
  }

</style>

<article class="flex">
  <img src={imgSource} alt={name}>
  <p class="fs-400 text-neutral-300">{statement}</p>

  <p>
    <span class="d-block ff-serif fs-400 fw-900 text-neutral-100">{name}</span>
    <span class="d-block fs-200 text-neutral-600">{role}</span>
  </p>
</article>